@{
    ViewBag.Title = "Team";
}
@Styles.Render("~/Content/css")
<div class="container-fluid">
    <div class="page-header">
        <h1>Team</h1>
        <p class="lead">Our lovely team</p>
    </div>
    <div class="row">
        @for (int i = 1; i <= 8; i++)
        {
            <div class="col-xs-12 col-sm-6 col-md-4 col-lg-2">
                <div class="thumbnail">
                    <img src="http://lorempixel.com/250/250/people/@i/" class="img-responsive img-thumbnail" />
                    <div class="caption">
                        <h3>Member @i</h3>
                        <p>Lorem ipsum dolor sit amet, consectetur adipiscing elit. Integer posuere erat a ante.</p>
                    </div>
                </div>
            </div>
        }
    </div>
</div>